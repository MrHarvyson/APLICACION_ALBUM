<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainLogin">

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/cerrar_sesion2_verde"
        android:onClick="salir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.922" />

    <ImageView
        android:id="@+id/imgFondoVerde"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/fondo_verde"
        android:transitionName="fondo"
        app:layout_constraintBottom_toBottomOf="@+id/textSanFernando"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imgLogo2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:transitionName="libro"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textSanFernando"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aldrich"
        android:text="@string/nombre_biblioteca"
        android:textColor="#FFFFFF"
        android:textSize="45dp"
        android:textStyle="bold"
        android:transitionName="texto1"
        app:layout_constraintBottom_toBottomOf="@+id/imgLogo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textPublica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aldrich"
        android:text="BIBLIOTECA PÃšBLICA"
        android:textColor="#A9FFFFFF"
        android:textSize="20sp"
        android:transitionName="texto2"
        app:layout_constraintBottom_toBottomOf="@+id/textSanFernando"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textSanFernando" />

</androidx.constraintlayout.widget.ConstraintLayout>