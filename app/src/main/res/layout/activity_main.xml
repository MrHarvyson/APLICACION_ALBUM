<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:translationX="0dp">



    <ImageView
        android:id="@+id/fondoVerde"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_verde"
        android:transitionName="fondo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnEntrarInicio"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_oscuro"
        android:fontFamily="@font/aldrich"
        android:onClick="entrar"
        android:text="@string/boton_entrar"
        android:textColor="#22B573"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEslogan"
        app:layout_constraintVertical_bias="0.22000003" />

    <Button
        android:id="@+id/btnRegistrarInicio"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_oscuro_vacio"
        android:fontFamily="@font/aldrich"
        android:onClick="registrarInicio"
        android:text="@string/boton_registar"
        android:textColor="#333333"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEntrarInicio"
        app:layout_constraintVertical_bias="0.17000002" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:layout_marginTop="50dp"
        android:transitionName="album"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/music" />

    <ImageView
        android:id="@+id/btnGoogle"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:onClick="google"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.312"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegistrarInicio"
        app:srcCompat="@drawable/goo" />

    <ImageView
        android:id="@+id/btnFacebook"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.684"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegistrarInicio"
        app:srcCompat="@drawable/face" />

    <TextView
        android:id="@+id/textEslogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aldrich"
        android:text="@string/eslogan"
        android:textColor="@color/grisClaro"
        android:textSize="20sp"
        android:transitionName="texto2"
        app:layout_constraintStart_toStartOf="@+id/textNombreAplicacion"
        app:layout_constraintTop_toBottomOf="@+id/textNombreAplicacion" />

    <TextView
        android:id="@+id/textNombreAplicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aldrich"
        android:text="@string/nombre_aplicacion"
        android:textColor="@color/negro"
        android:textSize="65sp"
        android:textStyle="bold"
        android:transitionName="texto1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animation_view"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>