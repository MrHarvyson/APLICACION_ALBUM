<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CrearFragment">

    <EditText
        android:id="@+id/textTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="@color/verde"
        android:ems="10"
        android:fontFamily="@font/aldrich"
        android:hint="@string/entrada_titulo"
        android:inputType="textPersonName"
        android:textColor="@color/verde"
        android:textColorHint="@color/verde"
        app:layout_constraintBottom_toTopOf="@+id/textAutor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/textAutor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="@color/verde"
        android:ems="10"
        android:fontFamily="@font/aldrich"
        android:hint="@string/entrada_autor"
        android:inputType="textPersonName"
        android:textColor="@color/verde"
        android:textColorHint="@color/verde"
        app:layout_constraintBottom_toTopOf="@+id/textDiscografica"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/textDiscografica"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="75dp"
        android:backgroundTint="@color/verde"
        android:ems="10"
        android:fontFamily="@font/aldrich"
        android:hint="@string/entrada_discografia"
        android:inputType="textPersonName"
        android:textColor="@color/verde"
        android:textColorHint="@color/verde"
        app:layout_constraintBottom_toTopOf="@+id/btn_agregar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_agregar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@drawable/boton_verde_lleno"
        android:fontFamily="@font/aldrich"
        android:onClick="agregar"
        android:text="@string/boton_agregar"
        android:textColor="@color/negro"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/btn_portada"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="portada"
        android:src="@drawable/camera"
        app:civ_border_color="@color/verde"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toTopOf="@+id/textTitulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>